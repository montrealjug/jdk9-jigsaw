<project>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.wordpress.londonjavacommunity.adoptopenjdk</groupId>
        <artifactId>jdk9-jigsaw.session1-05</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>jdk9-jigsaw.session1-05.com-greetings</artifactId>

    <!--
    <build>
        <sourceDirectory>src/main/java/com.greetings</sourceDirectory>
        <outputDirectory>../mods/com.greetings</outputDirectory>
    </build>
    -->
    
    <dependencies>
        <dependency>
            <groupId>com.wordpress.londonjavacommunity.adoptopenjdk</groupId>
            <artifactId>jdk9-jigsaw.session1-05.org-astro</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <!-- so compatible with javac's module-path flag (directory is the module name) -->
        <outputDirectory>target/classes/com.greetings</outputDirectory>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <workingDirectory>${project.basedir}</workingDirectory>
                    <executable>java</executable>
                    <longModulepath>false</longModulepath>
                    <arguments>
                        <argument>--module-path</argument>
                        <modulepath/>
                        <argument>--module</argument>
                        <argument>com.greetings/com.greetings.Main</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>